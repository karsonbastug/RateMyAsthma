<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='~/css/bootstrapMorph.min.css' rel="stylesheet" type="text/css" />

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            text-align: center;
            margin-bottom: 40px;
        }

        .search-filters {
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
            width: 25%;
            height: 80%;
            padding: 20px;
            background-color: lavender;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .search-filters h2 {
                margin-top: 0;
            }

            .search-filters label {
                display: block;
                margin-bottom: 10px;
            }

            .search-filters input[type="text"] {
                width: calc(100% - 10px);
                padding: 8px;
                font-size: 14px;
            }

            .search-filters button {
                display: block;
                width: 100%;
                padding: 10px;
                background-color: gold;
                color: #fff;
                border: none;
                cursor: pointer;
            }

        footer {
            text-align: center;
            margin-top: auto;
            padding: 20px 0;
        }
    </style>
</head>
<body>
    <div style="position: fixed; top: 5%; right: 42%; z-index: -1;">
        <img src="~/lib/cloud-computing.png" alt="A graphic of a cloud" style="width: 300px; height: 300px;">
    </div>
    <div style="position: fixed; top: 20%; right: 10%;z-index: -1;">
        <img src="~/lib/cloud-computing.png" alt="A graphic of a cloud" style="width: 300px; height: 300px;">
    </div>
    <div style="position: fixed; top: 30%; left: 15%;z-index: -1;">
        <img src="~/lib/cloud-computing.png" alt="A graphic of a cloud" style="width: 300px; height: 300px;">
    </div>

    <div style="position: fixed; top: 20%; left: 50%; transform: translate(-50%, -50%);">
        <h1 class="title">Custom Review Search</h1>
        <h2 class="title" style="font-size: 25px">Customize what reviews you would like to see</h2>
    </div>


    <!-- MaxTemp Displayer -->
    <div style="position: absolute; top: 50%; left: 50%; transform: translateX(-50%);">
        <div class="title">
            <p class="weather-info" style="font-size:30px;">
                <span id="cityM" style="display:inline-block;"></span>
                <span style="color: #123450;"> | Rating: </span>
                <span id="cityCommentM" style="display:inline-block;"></span>
                <span style="color: #123450;"> | Rating: </span>
                <span id="cityRatingM" style="display:inline-block;"></span>
                <span style="color: #123450;">| Temp: </span>
                <span id="cityTempM" style="display:inline-block;"></span>
                <span style="color: #123450;">| Date:</span>
                <span id="cityDateM" style="display:inline-block;"></span>
            </p>
        </div>
    </div>

    <script type="module">
        maxTempSearch('@HighTemp');
    </script>
    <!--MaxTemp End -->

    <div class="container">
        <div class="search-filters">
            <form id="highTempForm" onsubmit="submitHighTemp()">
                <h2>High Temp</h2>
                <input type="text" id="highTemp" name="HighTemp" placeholder="Search for reviews when the temp was more than your input">
                <button id="htempbtn" type="submit" onclick="submitHighTemp()">Search</button>
            </form>
            <form id="citySeasonForm" onsubmit="submitCitySeason()">
                <h2>City Season</h2>
                <input type="text" id="incity" name="City" placeholder="City">
                <input type="text" id="inseason" name="Season" placeholder="Season">
                <button id="cityseasonbtn" type="submit" onclick="submitCitySeason()">Search</button>
            </form>
            <form id="tempRangeForm" onclick="submitTempRange()">
                <h2>Temp Range</h2>
                <input type="text" id="tempMin" name="MinTemp" placeholder="Temp Min">
                <input type="text" id="tempMax" name="MaxTemp" placeholder="Temp Max">
                <button id="trangebtn" type="submit" onclick="submitTempRange()">Search</button>
            </form>
        </div>
    </div>



    <footer style="position: fixed; bottom: 20px; right: 20px; text-align: center;">
        <a href="AMain" class="btn bg-warning text-white">Return</a>
    </footer>
    <script>

        function submitHighTemp() {

            var htval = document.getElementById('highTemp').value;
            var newUrl = window.location.origin + window.location.pathname + '?highTemp=' + htval;
            window.location.href = newUrl;

        }

        function submitCitySeason() {
            var cval = document.getElementById('incity').value;
            var sval = document.getElementById('inseason').value;
