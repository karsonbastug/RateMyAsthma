@model RateMyAsthma.Pages.ACustomSearchModel

<!DOCTYPE html>
<html lang="en">
<head>
    <title>CSS Template</title>
    <link href='~/css/bootstrapMorph.min.css' rel="stylesheet" type="text/css" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            font-family: Arial, Helvetica, sans-serif;
            margin: 0;
            padding: 0;
            background-color: lightsteelblue;
        }

        header {
            background-color: #123456;
            padding: 20px;
            text-align: center;
            font-size: 35px;
            color: white;
        }

        nav {
            float: left;
            width: 30%;
            background-color: lavender;
            padding: 20px;
            height: 75vh;
        }

            nav ul {
                list-style-type: none;
                padding: 0;
            }

        article {
            float: left;
            padding: 20px;
            width: 70%;
            background-color: #f1f1f1;
            height: 75vh;
        }

        section::after {
            content: "";
            display: table;
            clear: both;
        }

        footer {
            background-color: #123450;
            padding: 10px 0;
            text-align: center;
            color: white;
            clear: both;
        }
    </style>
</head>
<body>


    <section>
        <nav>
            Custom Search
            <ul>
                <li>Placement</li>
            </ul>
            <form id="searchForm">
                
                <label for="maxTemp">Max Temp:</label>
                <input type="text" id="maxTemp" name="maxTemp"><br>
                <label for="season">Season:</label>
                <input type="text" id="season" name="season"><br>
                <label for="city">City:</label>
                <input type="text" id="city" name="city"><br>
                <button type="button" onclick="submitForm()">Search</button>
            </form>
        </nav>

        <article>
            <h1>Past reviews for (City)</h1>
            <p>poopfart</p>
        </article>
    </section>

    <footer>
        <a href="AMain" class="btn bg-warning text-white">Return</a>
    </footer>

</body>
</html>
